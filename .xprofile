#!/usr/bin/env sh

# This file runs when a DM logs you into a graphical session.
# If you use startx/xinit this file will also be sourced.

remaps &		    # run the remaps script, switching caps/esc and more; check it for more info
setbg &			    # set the background with the `setbg` script
picom & 
dunst &		        # dunst for notifications
sxhkd -c $XDG_CONFIG_HOME/sxhkd/{sxhkdrc_mode_placeholder,sxhkdrc,sxhkdrc_common} &		# Bind keys with sxhkd
xset r rate 300 50 &	# Speed xrate up
unclutter &		    # Remove mouse when idle
nextcloud &         # Sync with nextcloud deamon
#$STATUSBAR &		# script for updating the status bar
