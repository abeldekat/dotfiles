#!/bin/bash

. panel_colors
. siji-icons 

_date() {
  echo -n $(date "+%a %d")
}

_time() {
  echo -n $(date "+%H:%M")
}

_myclock() {
	local fg1=$COLOR_SYS_FG
	local bg1=$COLOR_SYS_BG
	local c="%{F$fg1}%{B$bg1} $ICON_CLOCK $(_time) %{B-}%{F-}"

	local fg2=$color8
	local bg2=$color3
	local d="%{F$fg2}%{B$bg2} $ICON_DATE $(_date) %{B-}%{F-}"

	echo "$d$c"
}

while true ; do 
	echo "C$(_myclock)"
	sleep 10
done
