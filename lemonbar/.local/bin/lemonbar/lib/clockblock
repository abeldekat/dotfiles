#!/bin/bash

. panel_colors
. siji-icons 

_date() {
  echo -n $(date "+%a %d")
}

_time() {
  echo -n $(date "+%H:%M")
}

_myclock() {
	local fg=$COLOR_SYS_FG
	local bg=$COLOR_SYS_BG
	local c="%{F$fg}%{B$bg} $ICON_CLOCK $(_time) %{B-}%{F-}"

	#alternate colors
	local d="%{F$bg}%{B$fg} $ICON_DATE $(_date) %{B-}%{F-}"

	echo "$d$c"
}

while true ; do 
	echo "C$(_myclock)"
	sleep 10
done
