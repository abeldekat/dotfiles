#!/bin/bash

. panel_colors
. siji-icons 


mytitle(){
	local fg=$COLOR_SYS_FG
	local bg=$COLOR_SYS_BG

	local res=$line
	local limit=15
	local length="${#res}"
	#[ $length -gt $limit ] && res='...'"${res:$((lenght-limit))}"
	[ $length -gt $limit ] && res="${res:0:$limit}"'...'


	echo "%{F$fg}%{B$bg} ${res} %{B-}%{F-}"
}

while read -r line ; do 
	echo "T$(mytitle)"
done < <(xtitle -sf '%s\n')

