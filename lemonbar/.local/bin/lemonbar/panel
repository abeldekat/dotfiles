#! /bin/bash

. panel_config
. panel_colors

if xdo id -a "$PANEL_WM_NAME" > /dev/null ; then
	printf "%s\n" "The panel is already running." >&2
	exit 1
fi

trap 'trap - TERM; kill 0' INT TERM QUIT EXIT

[ -e "$PANEL_FIFO" ] && rm "$PANEL_FIFO"
mkfifo "$PANEL_FIFO"

for block in $PANEL_BLOCKS/*block ; do
	$block > $PANEL_FIFO &
done

while read -r line; do
	case $line in
		W*) #bspwm
			wm="${line#?}" ;;
		T*) #xtitle
			title="${line#?}" ;;
		C*) #datetime
			datetime="${line#?}" ;;
		N*) #wifi
			net="${line#?}" ;;
		O*) #colors
			col="${line#?}" ;;
		A*) #just test something
			atest="${line#?}" ;;
		U*) #cpu
			cpu="${line#?}" ;;
		B*) #battery
			bat="${line#?}" ;;

	esac
	lblock="${wm}${atest}"
	cblock="${title}${col}"
	rblock="${bat} ${cpu} ${net} ${datetime}"
	echo -e "%{l}${lblock}%{c}${cblock}%{r}${rblock}"
done < "$PANEL_FIFO" \
	| lemonbar \
	-g ""$BAR_WIDTH"x"$BAR_HEIGHT"+"$BAR_OFFSET_X"+"$BAR_OFFSET_Y"" \
	-F "$COLOR_DEFAULT_FG" \
	-B "$COLOR_DEFAULT_BG" \
	-U "$COLOR_DEFAULT_UL" \
	-f "$BAR_FONT" \
	-f "$BAR_FONT_ICON" \
	-u $BAR_UNDERLINE_WIDTH \
	-n "$PANEL_WM_NAME" \
#	-p
	| sh &

wid=$(xdo id -m -a "$PANEL_WM_NAME")
xdo above -t "$(xdo id -N Bspwm -n root | sort | head -n 1)" "$wid"

wait
