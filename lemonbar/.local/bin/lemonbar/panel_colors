#!/bin/bash

. $(colors-get-base16)

BAR_TRANSPARANCY=90
if [ -n "$BAR_TRANSPARANCY" ] ; then
	background="#$BAR_TRANSPARANCY${background#?}"
fi

COLOR_DEFAULT_FG="$color15"
COLOR_DEFAULT_BG="$background"
COLOR_DEFAULT_UL="$background"

# "right section" 
COLOR_SYS_FG="$color11"
COLOR_SYS_BG="$background"
_rfg="$color11"
_rbg="$background"

COLOR_DATE_FG="$_rfg"
COLOR_DATE_BG="$_rbg"
COLOR_NET_FG="$_rfg"
COLOR_NET_BG="$_rbg"
COLOR_CPU_FG="$_rfg"
COLOR_CPU_BG="$_rbg"
COLOR_BAT_FG="$_rfg"
COLOR_BAT_BG="$_rbg"
