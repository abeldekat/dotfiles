[colors]
background = ${xrdb:background}
background-alt = ${xrdb:color0}
foreground = ${xrdb:foreground}
foreground-alt = ${xrdb:color7}
primary = ${xrdb:color3}
alert = ${xrdb:color1}
; custom 
tray-background = #00000000
background-wm-focussed = ${xrdb:color7}
foreground-wm-empty = ${xrdb:color2}

[settings]
format-foreground =
format-underline = ${colors.primary}
format-background = ${colors.background-alt}
format-padding = 1
format-overline =
format-margin = 0
format-offset =
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

[bar/top]
monitor-strict = false
monitor-exact = true
override-redirect = false
wm-restack = bspwm
enable-ipc = true
fixed-center = false
bottom = false
separator =

width = 100%
height = 32
offset-x = 0
offset-y = 0
radius = 0.0

underline-size = 3
overline-size = 0

background = ${colors.background}
foreground = ${colors.foreground}

module-margin-left = 0
module-margin-right = 1

font-0 = JetBrainsMonoMedium:pixelsize=10;
font-1 = HackNerdFont:pixelsize=10;
font-2 = JoyPixels:fontformat=truetype:scale=10:antialias=false;

modules-left = bspwm
modules-right = window-mode date

tray-position = right
tray-padding = 0
tray-background = ${colors.tray-background}
tray-offset-x = 0
tray-offset-y = 0
tray-scale = 1.0

cursor-click = pointer
cursor-scroll = default

[module/bspwm]
type = internal/bspwm
format = <label-state> <label-mode>
format-underline =
format-background =
format-padding =

label-monocle = M
label-pseudotiled = P
label-marked = A
label-sticky = S

label-focused = %index%
label-focused-foreground = ${colors.background}
label-focused-background = ${colors.background-wm-focussed}
label-focused-underline = ${colors.primary}
label-focused-padding = 1
;
label-occupied = %index%
label-occupied-padding = 1
;
label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 1
;
label-empty = %index%
label-empty-foreground = ${colors.foreground-wm-empty}
label-empty-padding = 0

[module/window-mode]
type = custom/ipc
content = 
hook-0 = echo "N"
hook-1 = echo %{F#f00}V%{F-}
initial = 1
format-prefix="ðŸŽ¹ "
format-underline = ${xrdb:color6}

[module/date]
type = internal/date
interval = 60
date = %d/%m
time = %H:%M
date-alt = %A, %d %B %Y
time-alt = %H:%M:%S
label = %date% %time%
format-margin = 1

