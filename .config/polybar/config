;Most modules define a format-NAME field, which lets you configure the output format of the module.
;https://github.com/polybar/polybar/wiki/Formatting
;Tokens can be used in many labels to display dynamic values set by the module. For example in the internal/date module, %time% will be replaced with the formatted time string.
;A label is simply text. You may include a token which represents a value.
;Ramp entries are based on labels which means that you can define all properties that are available for a <label>
;Polybar has built-in support for basic lemonbar tags.

[colors]
; 
; Turn off transparancy:
background = ${xrdb:background}
; Turn on transparancy:
; background = #00000000
;
background-alt = ${xrdb:background}
foreground = ${xrdb:foreground}
foreground-alt = ${xrdb:color7}
primary = ${xrdb:color3}
alert = ${xrdb:color1}
; custom 
tray-background = #00000000
background-wm-focussed = ${xrdb:color7}
foreground-wm-empty = ${xrdb:color2}

; --> Application settings:
[settings]
screenchange-reload = true
; Define fallback values used by all module formats
format-foreground =
format-background = ${colors.background-alt}
format-underline = ${colors.primary}
format-overline =
format-spacing =
format-padding = 1
format-margin =
format-offset =

; Enables pseudo-transparency for the bar
; If set to true the bar can be transparent without a compositor.
pseudo-transparency = false

; Compositing operators
; ; @see: https://www.cairographics.org/manual/cairo-cairo-t.html#cairo-operator-t
; compositing-background = source
; compositing-foreground = over
; compositing-overline = over
; compositing-underline = over
; compositing-border = over

; --> global settings
[global/wm]
margin-top = 0
margin-bottom = 0

; --> bar settings
[bar/top]
monitor-strict = false
monitor-exact = true
override-redirect = false
wm-restack = bspwm
enable-ipc = true
; fixed-center = false
fixed-center = true
bottom = false
separator =

width = 100%
height =32 
offset-x = 0
offset-y = 0
radius = 0.0
; border-size = 2
; border-color = ${colors.foreground}
underline-size = 0
overline-size = 0

background = ${colors.background}
foreground = ${colors.foreground}

module-margin-left = 0
module-margin-right = 1

font-0 = JetBrainsMonoMedium:pixelsize=10;
font-1 = HackNerdFont:pixelsize=10;
font-2 = JoyPixels:fontformat=truetype:scale=10:antialias=false;

modules-left = bspwm
modules-center =
modules-right = sxhkd-mode memory cpu temperature battery backlight pulseaudio date 

tray-position = right
tray-padding = 0
tray-background = ${colors.tray-background}
tray-offset-x = 0
tray-offset-y = 0
tray-scale = 1.0

; Fallback click handlers that will be called if
; ; there's no matching module handler found.
; click-left = 
; click-middle = 
; click-right =
; scroll-up =
; scroll-down =
; double-click-left =
; double-click-middle =
; double-click-right =

cursor-click = pointer
cursor-scroll = default

[module/bspwm]
type = internal/bspwm
format = <label-state> <label-mode>
format-underline =
format-background =
format-padding =

label-monocle = M
label-pseudotiled = P
label-marked = A
label-sticky = S

label-focused = %index%
; Transparancy:
; used to be the colors.background which is not invisible when background is 0000 
label-focused-foreground = ${colors.background}
label-focused-background = ${colors.background-wm-focussed}
label-focused-underline = ${colors.primary}
label-focused-padding = 1
;
label-occupied = %index%
label-occupied-padding = 1
;
label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 1
;
label-empty = %index%
label-empty-foreground = ${colors.foreground-wm-empty}
label-empty-padding = 0

[module/sxhkd-mode]
type = custom/ipc
format = <output>
; content =
;
; Normal mode, the basic
hook-0 = echo "📌 N "
; Layout mode
hook-1 = echo "📌%{R} V %{R-}"
; Node mode, test node selectors
hook-2 = echo "📌%{R} O %{R-}"
; Bsp-layout mode, test bsp-layout
hook-3 = echo "📌%{R} B %{R-}"
; Cpdfd-layout mode, test prots dots for debian
hook-4 = echo "📌%{R} P %{R-}"

initial = 1
; format-background = ${xrdb:color6}
; format-foreground = ${xrdb:color0}
format-padding = 0
format-underline = ${xrdb:color6}

[module/date]
type = internal/date
interval = 60
date = %d/%m
time = %H:%M
date-alt = %A, %d %B %Y
time-alt = %H:%M:%S
label = %date% %time%
format-prefix = "🕘  "
; format-prefix = "🕰  "

[module/battery]
type = internal/battery
full-at = 99 
; $ ls -1 /sys/class/power_supply/
battery = BAT1
adapter = AC
; If an inotify event haven't been reported in this many
; seconds, manually poll for new values. Fallback, disable with 0. Default: 5
poll-interval = 120
format-charging-prefix = "🔋 "
format-discharging-prefix = "🔋 "
format-full-prefix = "🔋 "
format-charging-underline = ${xrdb:color9}
format-discharging-underline = ${xrdb:color9}
format-full-underline = ${xrdb:color9}

[module/cpu]
type = internal/cpu
; Seconds to sleep between updates Default: 1
interval = 5
format-prefix = "💻 "
format-underline = ${xrdb:color11}
; label = CPU %percentage%%
; format = <label> <ramp-coreload>
format =<ramp-load>
ramp-load-spacing = 1
ramp-load-0 = ▁
ramp-load-1 = ▂
ramp-load-2 = ▃
ramp-load-3 = ▄
ramp-load-4 = ▅
ramp-load-5 = ▆
ramp-load-6 = ▇
ramp-load-7 = █

[module/backlight]
type = internal/backlight
; Use the following command to list available cards: ; $ ls -1 /sys/class/backlight/
card = intel_backlight
format-underline = ${xrdb:color10}
format = <ramp> <label>
ramp-0 = 🌕
ramp-1 = 🌔
ramp-2 = 🌓
ramp-3 = 🌒
ramp-4 = 🌑

[module/memory]
type = internal/memory
; Seconds to sleep between updates Default: 1
interval = 10
format-underline = ${xrdb:color13}
format-prefix = "🧠 "

[module/temperature]
; Terminal: sensors
type = internal/temperature
; Seconds to sleep between updates Default: 1
interval = 10
; Thermal zone to use, ; Default: 0 To list all the zone types, run 
; $ for i in /sys/class/thermal/thermal_zone*; do echo "$i: $(<$i/type)"; done
thermal-zone = 0
format-underline = ${xrdb:color10}
format-prefix = "🌡 "
; format-prefix = "🔥 "

[module/pulseaudio]
type = internal/pulseaudio
; Sink to be used, if it exists (find using `pacmd list-sinks`, name field)
; If not, uses default sink
; sink = alsa_output.pci-0000_12_00.3.analog-stereo
; Use PA_VOLUME_UI_MAX (~153%) if true, or PA_VOLUME_NORM (100%) if false
; Default: true
use-ui-max = true
; Interval for volume increase/decrease (in percent points) Default: 5
interval = 5
format-volume = <ramp-volume> <label-volume>
format-muted = <label-muted>
label-volume = %percentage%%
label-muted = 🔇 muted
; label-muted-foreground = #666
; Only applies if <ramp-volume> is used
ramp-volume-0 = 🔈
ramp-volume-1 = 🔉
ramp-volume-2 = 🔊
; Right and Middle click
click-right = pavucontrol
format-volume-underline = ${xrdb:color5}

