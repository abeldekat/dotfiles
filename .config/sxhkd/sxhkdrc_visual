# Change config to base mode
Escape
	sxhkd-modes-switch-files visual 0
	sxhkd-reload && \
	polybar-msg hook window-mode 1 > /dev/null

#
{t,shift + space,space,f}
 	bspc node -t '~{tiled,pseudo_tiled,floating,fullscreen}'

# expand node
{h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

#contract node
shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move node
ctrl + {h,j,k,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}
